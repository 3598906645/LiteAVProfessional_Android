<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/v1livepusher_main_bkg">

    <FrameLayout
        android:id="@+id/v1livepusher_pusher_tx_cloud_view_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/v1livepusher_pusher_ll_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:src="@drawable/v1livepusher_btn_back_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="@string/v1livepusher_return"
                android:textColor="#ffffff"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/v1livepusher_item_live_pusher_video"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/v1livepusher_pusher_ib_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@color/v1livepusher_transparent"
            android:padding="10dp"
            android:src="@drawable/v1livepusher_question_link" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/v1livepusher_pusher_address_viewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/v1livepusher_pusher_btn_code_viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/v1livepusher_qr_code"
            android:visibility="gone" />

        <EditText
            android:id="@+id/v1livepusher_pusher_et_rtmp_url"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/v1livepusher_input_box"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:textColorHint="#3f000000" />

        <Button
            android:id="@+id/v1livepusher_pusher_btn_scanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/v1livepusher_qr_code" />

        <Button
            android:id="@+id/v1livepusher_pusher_btn_new_push_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/v1livepusher_new_address" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/v1livepusher_pusher_ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/v1livepusher_pusher_btn_start"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@mipmap/v1livepusher_pusher_start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/v1livepusher_pusher_btn_switch_camera"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:background="@mipmap/v1livepusher_camera_front" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/v1livepusher_pusher_btn_beauty"
            android:visibility="gone"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:background="@drawable/v1livepusher_lvb_beauty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/v1livepusher_pusher_btn_bgm"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@mipmap/v1livepusher_pusher_bgm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/v1livepusher_pusher_btn_show_log"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:background="@drawable/v1livepusher_log_show" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/v1livepusher_pusher_btn_setting"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:background="@mipmap/v1livepusher_role" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/v1livepusher_pusher_btn_more"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:background="@mipmap/v1livepusher_more" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <com.tencent.liteav.demo.beauty.view.BeautyPanel
        android:id="@+id/v1livepusher_pusher_beauty_pannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/v1livepusher_pusher_ll_bottom_bar"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/v1livepusher_pusher_tv_net_error_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/v1livepusher_color_red"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="@string/v1livepusher_bad_network_tip"
        android:textColor="#ffffff"
        android:textSize="10dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/v1livepusher_pusher_ll_code_viewer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/v1livepusher_pusher_address_viewer"
        android:layout_above="@id/v1livepusher_pusher_ll_bottom_bar"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/v1livepusher_rtmp_play_address"
            android:textColor="@color/v1livepusher_white" />

        <ImageView
            android:id="@+id/v1livepusher_pusher_iv_rtmp_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/v1livepusher_flv_play_address"
            android:textColor="@color/v1livepusher_white" />

        <ImageView
            android:id="@+id/v1livepusher_pusher_iv_flv_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/v1livepusher_hls_play_address"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/v1livepusher_pusher_iv_hls_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/v1livepusher_rtmp_accelerating_flow_address"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/v1livepusher_pusher_iv_rtmp_acc_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>
