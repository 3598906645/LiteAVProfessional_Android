<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">

    <include
        layout="@layout/liveplayer_activity_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_v1_entrance_startPlay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="开始播放"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/cb_v1_entrance_setEableMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:onClick="onClick"
                android:text="EnableMessage" />

            <CheckBox
                android:id="@+id/cb_v1_entrance_setEnableAEC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:onClick="onClick"
                android:text="EnableAEC" />

            <CheckBox
                android:id="@+id/cb_v1_entrance_setEnableMetaData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:onClick="onClick"
                android:text="EnableMetaData" />

            <CheckBox
                android:id="@+id/cb_v1_entrance_setAutoAdjustCacheTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onClick"
                android:text="AutoAdjustCacheTime" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CacheTime：" />

                <EditText
                    android:id="@+id/et_v1_entrance_setCacheTime"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:text="5" />

                <Button
                    android:id="@+id/btn_v1_entrance_setCacheTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="设置"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MinAutoAdjustCacheTime：" />

                <EditText
                    android:id="@+id/et_v1_entrance_setMinAutoAdjustCacheTime"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:text="1" />

                <Button
                    android:id="@+id/btn_v1_entrance_setMinAutoAdjustCacheTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="设置"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MaxAutoAdjustCacheTime：" />

                <EditText
                    android:id="@+id/et_v1_entrance_setMaxAutoAdjustCacheTime"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:text="5" />

                <Button
                    android:id="@+id/btn_v1_entrance_setMaxAutoAdjustCacheTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="设置"
                    android:textColor="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/v1_liveplayer_textView_setVideoBlockThreshold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="VideoBlockThreshold：" />

                <EditText
                    android:id="@+id/et_v1_entrance_setVideoBlockThreshold"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:text="800" />

                <Button
                    android:id="@+id/btn_v1_entrance_setVideoBlockThreshold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="设置"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/v1_liveplayer_textView_setConnectRetryCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ConnectRetryCount：" />

                <EditText
                    android:id="@+id/et_v1_entrance_setConnectRetryCount"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:text="3" />

                <Button
                    android:id="@+id/btn_v1_entrance_setConnectRetryCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="设置"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/v1_liveplayer_textView_setConnectRetryInterval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ConnectRetryInterval：" />

                <EditText
                    android:id="@+id/et_v1_entrance_setConnectRetryInterval"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:text="3" />

                <Button
                    android:id="@+id/btn_v1_entrance_setConnectRetryInterval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="设置"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FlvSessionKey：" />

                <EditText
                    android:id="@+id/et_v1_entrance_setFlvSessionKey"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:text="X-Tlive-SpanId" />

                <Button
                    android:id="@+id/btn_v1_entrance_setFlvSessionKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="设置"
                    android:textColor="@color/black" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_v1_entrance_renderType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="渲染方式：" />

                <RadioButton
                    android:id="@+id/rb_v1_entrance_TXCloudVideoView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="TXCloudVideoView" />

                <RadioButton
                    android:id="@+id/rb_v1_entrance_Surface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surface" />

                <RadioButton
                    android:id="@+id/rb_v1_entrance_customRenderTexture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CustomRender: Texture + Texture2D" />

                <RadioButton
                    android:id="@+id/rb_v1_entrance_customRenderI420"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CustomRender: I420 + ByteArray" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>



</LinearLayout>