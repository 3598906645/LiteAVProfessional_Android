<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_item_bg"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_country_code_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/login_color_black"
        android:textSize="18sp"
        tools:text="China" />

    <TextView
        android:id="@+id/tv_country_code"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/login_main_text"
        android:textSize="16sp"
        tools:text="+86" />

    <View
        android:layout_below="@id/tv_country_code_display"
        android:background="@color/login_color_line"
        android:layout_width="match_parent"
        android:layout_height="1px" />

</RelativeLayout>